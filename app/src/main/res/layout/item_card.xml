<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"
    android:layout_height="wrap_content"    android:layout_margin="10dp"
    android:background="#D5BDF1"    android:padding="9dp">
    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/image_card"
        android:layout_width="90dp"        android:layout_height="90dp"
        android:src="@drawable/cat_glasses_office_suit" />    <LinearLayout
    android:layout_width="match_parent"        android:layout_height="wrap_content"
    android:layout_marginStart="14dp"        android:orientation="vertical"
    android:background="@color/white"        android:padding="3dp"
    android:layout_weight="2">        <TextView
    android:id="@+id/name_surname_card"            android:layout_width="wrap_content"
    android:layout_height="wrap_content"            android:layout_marginTop="6dp"
    android:text="Mark Bennet"
    android:textColor="@color/purple_700"            android:textSize="22sp" />
    <TextView            android:id="@+id/tel_number_card"
        android:layout_width="wrap_content"            android:layout_height="wrap_content"
        android:text="+996 555356590"            android:textColor="@color/purple_700"
        android:textSize="22sp" />        <EditText
        android:id="@+id/my_message"            android:layout_width="match_parent"
        android:layout_height="90dp"            android:background="@color/white"
        android:visibility="gone"            android:backgroundTint="#EDECEC"
        android:hint="write here message:"/>    </LinearLayout>


    <ImageButton        android:id="@+id/dropdown_menu"
        android:layout_width="42dp"        android:layout_height="44dp"
        android:layout_gravity="end"        android:layout_marginStart="4dp"
        android:background="@drawable/baseline_storage_24"        android:contentDescription="Drop down menu"
        tools:ignore="TouchTargetSizeCheck" />
</LinearLayout>